<Project DefaultTargets="Test" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <OutputPath Condition="'$(OutputPath)' == ''">..\Source\</OutputPath>
  </PropertyGroup>
  <UsingTask
    AssemblyFile="xunit.runner.msbuild.dll"
    TaskName="Xunit.Runner.MSBuild.xunit"/>

  <ItemGroup>
    <TestAssembly Include="$(OutputPath)\*Tests.dll"/>
  </ItemGroup>
  
  <Target Name="Test">
    <xunit Assembly="@(TestAssembly)" />
  </Target>

</Project>
